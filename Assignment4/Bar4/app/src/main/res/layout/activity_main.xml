<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA">

    <!-- Center square -->
    <View
        android:id="@+id/centerSquare"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:background="#000000"
        android:layout_centerInParent="true" />

    <!-- Top square -->
    <View
        android:id="@+id/topSquare"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:background="#000000"
        android:layout_above="@id/centerSquare"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <!-- Left square -->
    <View
        android:id="@+id/leftSquare"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:background="#000000"
        android:layout_toLeftOf="@id/centerSquare"
        android:layout_alignTop="@id/centerSquare"
        android:layout_marginRight="16dp"/>

    <!-- Right square -->
    <View
        android:id="@+id/rightSquare"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:background="#000000"
        android:layout_toRightOf="@id/centerSquare"
        android:layout_alignTop="@id/centerSquare"
        android:layout_marginLeft="16dp"/>

    <!-- Bottom square -->
    <View
        android:id="@+id/bottomSquare"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:background="#000000"
        android:layout_below="@id/centerSquare"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>
</RelativeLayout>
